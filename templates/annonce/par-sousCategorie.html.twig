{% extends 'base.html.twig' %}

{% block title %}Hello AnnonceController!
{% endblock %}

{% block body %}
	<div class="flex">
			{% for sous in sousCategorie %}
				{% for ann in sous.annonces %}
		<div class="col-md-3 p-1">
					<div class="card">
						<img src="{{asset('/img/image/' ~ ann.imageName)}}" class="card-img-top" alt="{{ann.titre}}">
						<div class="card-body">
							<h5 class="card-title">{{ann.titre}}</h5>
							<a href="#" class="btn btn-primary">Go somewhere</a>
						</div>
					</div>
		</div>
				{% endfor %}
			{% endfor %}
	</div>
{% endblock %}
