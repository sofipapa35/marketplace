{% extends 'base.html.twig' %}

{% block title %}Hello AnnonceController!
{% endblock %}

{% block body %}
	{% if cat.annonces|length > 0 %}

		<div class="flex">
			{% for c in cat.annonces %}
				<div class="col-md-3 p-1">
					<div class="card">
						<i class="fa fa-heart text-end icon"></i>
						<img src="{{asset('/img/image/' ~ c.imageName)}}" class="card-img-top" alt="{{c.titre}}">
						<div class="card-body">
							<h5 class="card-title">{{c.titre}}</h5>
							<a href="{{path('annonceDetail', {id: c.id})}}" class="btn btn-warning w-100 my-2">Details</a>
							<a href="#" class="btn btn-primary w-100">Ajoutez au panier</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	{% endif %}

{% endblock %}
